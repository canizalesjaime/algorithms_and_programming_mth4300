{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Python: run current file",
      "type": "shell",
      "command": "python",
      "args": [
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "C/C++: build active file (g++)",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "mkdir -p '${workspaceFolder}/hidden/.build/${relativeFileDirname}' && g++ -g -std=c++20 '${file}' -o '${workspaceFolder}/hidden/.build/${relativeFileDirname}/${fileBasenameNoExtension}'"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}